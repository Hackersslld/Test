-- Boot the Library
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

-- Create the Main Window
local Window = Rayfield:CreateWindow({
   Name = "OxyHub",
   LoadingTitle = "Loading OxyHub",
   LoadingSubtitle = "Scripting Made Easy",
   ConfigurationSaving = {
      Enabled = true,
      FolderName = "OxyHub", -- Custom folder name
      FileName = "Config"
   },
   Discord = {
      Enabled = false,
      Invite = "noinvitelink",
      RememberJoins = true
   },
   KeySystem = true, -- Enabled key system
   KeySettings = {
      Title = "Access Key",
      Subtitle = "Enter your key",
      Note = "Get your key from our website",
      FileName = "Key",
      SaveKey = true,
      GrabKeyFromSite = false,
      Key = {"YourKey"}
   }
})

-- Create Tabs for Different Sections
local HomeTab = Window:CreateTab("Home", 4483362458)
local ScriptsTab = Window:CreateTab("Scripts", 4483362458)
local NewsTab = Window:CreateTab("News", 4483362458)
local WhatIsOxyHubTab = Window:CreateTab("What is OxyHub", 4483362458) -- Renamed from GitHub
local DiscordTab = Window:CreateTab("Discord", 4483362458)
local UpdatesTab = Window:CreateTab("Updates", 4483362458)

-- Add Sections and Detailed Server Statuses to Home Tab
HomeTab:CreateLabel("Welcome to OxyHub!")
HomeTab:CreateLabel("News: Check out the latest updates!")

HomeTab:CreateSection("Server Status")
HomeTab:CreateLabel("Main Server: Online - No issues reported. All services running smoothly.")
HomeTab:CreateLabel("Authentication Server: Online - Responding within normal parameters.")
HomeTab:CreateLabel("Script Repository: Online - New scripts are being added regularly.")
HomeTab:CreateLabel("Database Server: Online - Data is being processed and saved without any issues.")
HomeTab:CreateLabel("Backup Server: Offline - Scheduled maintenance. Expected back online in 2 hours.")
HomeTab:CreateLabel("API Server: Online - All APIs are fully functional and responsive.")

-- Add Scripts to Scripts Tab
ScriptsTab:CreateButton({
    Name = "Adopt Me!",
    Callback = function()
        loadstring(game:HttpGet("https://egorikusa.space/271ee1956d4b196c73150e64.lua", true))()
    end
})
ScriptsTab:CreateButton({
    Name = "Bloxburg",
    Callback = function()
        loadstring(game:HttpGet("https://vedrox.com/data/scripts/free/script.lua"))()
    end
})
ScriptsTab:CreateButton({
    Name = "Piggy",
    Callback = function()
        loadstring(Game:HttpGet("https://raw.githubusercontent.com/DFDERD41/autofarms-2-game/main/piggynoob", true))()
    end
})
ScriptsTab:CreateButton({
    Name = "Arsenal",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/tbao143/thaibao/main/TbaoHubArsenal"))()
    end
})
ScriptsTab:CreateButton({
    Name = "Jailbreak",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/BlitzIsKing/UniversalFarm/main/Loader/Regular"))()
    end
})

-- Add News to News Tab
local NewsSection = NewsTab:CreateSection("Latest News")
NewsTab:CreateParagraph({
   Title = "OxyHub 2.0 Released!",
   Content = "We've revamped the hub with new features and an improved UI. Check it out now!"
})
NewsTab:CreateParagraph({
   Title = "New Scripts Added",
   Content = "We've added scripts for 'Adopt Me!', 'Bloxburg', and more. Head over to the Scripts tab to explore."
})
NewsTab:CreateParagraph({
   Title = "Discord Integration",
   Content = "Join our Discord community directly from the hub! Share your thoughts, get help, and stay updated."
})

-- Add Information to What is OxyHub Tab
local WhatIsOxyHubSection = WhatIsOxyHubTab:CreateSection("About OxyHub")
WhatIsOxyHubSection:CreateLabel("OxyHub is a powerful scripting hub designed to make executing scripts in Roblox easier than ever.")
WhatIsOxyHubSection:CreateLabel("With a user-friendly interface and a wide variety of scripts, OxyHub is your go-to tool for customizing your Roblox experience.")
WhatIsOxyHubSection:CreateLabel("We regularly update our hub with new features and scripts to keep you ahead of the curve.")
WhatIsOxyHubSection:CreateLabel("Join our Discord community to get the latest news, support, and share your experience with other users.")

-- Add Updates to Updates Tab
local UpdatesSection = UpdatesTab:CreateSection("Recent Updates")
UpdatesTab:CreateParagraph({
   Title = "Update 2.1.0",
   Content = "Added new scripts for popular games. Improved script loading speed by 20%."
})
UpdatesTab:CreateParagraph({
   Title = "Update 2.0.0",
   Content = "Major UI overhaul. Introduced new server status monitoring and Discord integration."
})

-- Example of a Notification
Rayfield:Notify({
   Title = "Welcome",
   Content = "Thank you for using OxyHub!",
   Duration = 5,
   Image = 4483362458,
   Actions = {
      Ignore = {
         Name = "Okay!",
         Callback = function()
            print("The user tapped Okay!")
         end
      }
   }
})

-- Example of an Input Box in Home Tab
local Input = HomeTab:CreateInput({
   Name = "Enter Your Name",
   PlaceholderText = "Type your name here...",
   Callback = function(Text)
      print("User entered: " .. Text)
   end,
})

